    <script>
        let attempts = 0;
        const noBtn = document.getElementById('no-btn');
        let isRunning = false;

        // Create floating hearts
        function createHeart() {
            const heartsContainer = document.getElementById('hearts-bg');
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.textContent = 'ðŸ’—';
            
            const startX = Math.random() * 100;
            const drift = (Math.random() - 0.5) * 300;
            const driftEnd = drift + (Math.random() - 0.5) * 300;
            
            heart.style.left = startX + '%';
            heart.style.setProperty('--drift', drift + 'px');
            heart.style.setProperty('--drift-end', driftEnd + 'px');
            heart.style.animationDelay = Math.random() * 5 + 's';
            heart.style.fontSize = (Math.random() * 35 + 25) + 'px';
            
            heartsContainer.appendChild(heart);
            
            setTimeout(() => heart.remove(), 15000);
        }

        // Create hearts continuously
        setInterval(createHeart, 600);
        for (let i = 0; i < 15; i++) {
            setTimeout(createHeart, i * 300);
        }

        // Make "No" button run away
        function runAway() {
            if (isRunning) return;
            isRunning = true;

            attempts++;

            // Calculate screen boundaries
            const maxX = window.innerWidth - 250;
            const maxY = window.innerHeight - 100;
            
            // Generate position far from current location
            let randomX = Math.random() * maxX;
            let randomY = Math.random() * maxY;
            
            // Ensure it's not in the center
            const centerX = window.innerWidth / 2;
            const centerY = window.innerHeight / 2;
            
            if (Math.abs(randomX - centerX) < 250) {
                randomX = randomX < centerX ? Math.max(50, centerX - 350) : Math.min(maxX, centerX + 350);
            }
            if (Math.abs(randomY - centerY) < 150) {
                randomY = randomY < centerY ? Math.max(50, centerY - 250) : Math.min(maxY, centerY + 250);
            }
            
            // Move button - KEEP z-index high
            noBtn.style.position = 'fixed';
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
            noBtn.style.transform = 'none';
            noBtn.style.zIndex = '9999'; // Keep it visible!

            // Shrink No button
            const currentSize = parseFloat(getComputedStyle(noBtn).fontSize);
            if (currentSize > 12) {
                noBtn.style.fontSize = (currentSize - 1.5) + 'px';
                noBtn.style.padding = '1rem 2rem';
            }

            // Grow Yes button
            const yesBtn = document.querySelector('.btn-yes');
            const currentYesSize = parseFloat(getComputedStyle(yesBtn).fontSize);
            yesBtn.style.fontSize = (currentYesSize + 1.5) + 'px';
            yesBtn.style.padding = `${1.5 + attempts * 0.15}rem ${3 + attempts * 0.15}rem`;

            // Change the text!
            const noTexts = [
                              'No',
                'Wait!',
                'Are you sure?',
                'Really??',
                'Think again!',
                'But why? ðŸ¥º',
                'Reconsider!',
                'Come on!',
                'Please? ðŸ¥¹',
                'Pretty please?',
                'You sure?',
                'Last chance!',
                'Think about it!',
                'Don\'t do this!',
                'Wrong choice!',
                'Try again!',
                'Nope!',
                'Can\'t catch me!',
                'Too slow! ðŸ˜',
                'Nice try!',
                'Almost!',
                'Keep trying!',
                'You know you want to say yes!',
                'Just click yes already! ðŸ’•',
                'Fine, I\'ll keep running! ðŸƒ',
                'This is fun! ðŸ˜„',
                'You can\'t catch me!',
                'Wheee! ðŸŽ‰',
                'Over here!',
                'Too fast for you!',
                'Give up yet? ðŸ˜',
                'Click the pretty pink button! â†’',
                'So much dedication',
                'YES is the right answer!',
                'Stop chasing me!',
                'I\'m getting tired',
                'Okay seriously, just say yes!',
                'PLEASE! ðŸ™',
                'Say yes for a BMW!',
                'Fine you win... jk! ðŸ˜œ',
                'YESSSSS â†’â†’â†’'
            ];

            const textIndex = Math.min(attempts - 1, noTexts.length - 1);
            noBtn.textContent = noTexts[textIndex];

            setTimeout(() => {
                isRunning = false;
            }, 100);
        }

        // Handle clicking No (if they catch it)
        function handleNo() {
            alert("You're quick! But that's not the right answer ðŸ˜ŠðŸ’•");
            runAway();
        }

        // Handle Yes
        function handleYes() {
            // Hide question phase
            document.getElementById('question-phase').classList.add('hidden');
            
            // Show success phase
            document.getElementById('success-phase').classList.add('active');
            
            // Massive confetti
            createConfetti();
            
            // Flood the screen with hearts
            for (let i = 0; i < 80; i++) {
                setTimeout(createHeart, i * 50);
            }

            // Continue creating hearts throughout
            const heartInterval = setInterval(createHeart, 300);
            setTimeout(() => clearInterval(heartInterval), 10000);
        }

        // Confetti explosion
        function createConfetti() {
            const colors = ['#FF6B9D', '#FFA5BD', '#FFD1DC', '#C06C84', '#6C5B7B', '#FFC0CB', '#FF69B4'];
            
            for (let i = 0; i < 200; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.top = '-20px';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.width = (Math.random() * 8 + 6) + 'px';
                    confetti.style.height = (Math.random() * 8 + 6) + 'px';
                    
                    if (Math.random() > 0.5) {
                        confetti.style.borderRadius = '50%';
                    }
                    
                    confetti.style.animationDelay = Math.random() * 0.5 + 's';
                    confetti.style.animationDuration = (Math.random() * 2 + 3) + 's';
                    
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 5000);
                }, i * 15);
            }
        }

        // Easter egg - press Y to say yes
        document.addEventListener('keydown', (e) => {
            if ((e.key === 'y' || e.key === 'Y') && !document.getElementById('question-phase').classList.contains('hidden')) {
                handleYes();
            }
        });

        // Prevent context menu on buttons (cleaner experience)
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('contextmenu', (e) => e.preventDefault());
        });
    </script>
</body>
