            <div class="buttons">
                <button class="btn btn-yes" onclick="handleYes()">Yes! ðŸ’–</button>
                <button class="btn btn-no" id="no-btn" onmouseenter="runAway()" ontouchstart="runAway()" onclick="handleNo()">
                    No
                </button>
            </div>
        </div>

        <!-- Success Phase -->
        <div class="success-phase" id="success-phase">
            <div class="success-emojis">âœ¨ðŸ’–âœ¨</div>
